<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="droidtuts4you.com.animatedflotingactionbar.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main_fab"
        android:layout_alignStart="@+id/main_fab"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="7dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/fab1_color"
        app:fabSize="mini"
        app:srcCompat="@drawable/facebook" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fab1"
        android:layout_alignStart="@+id/fab1"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/fab2_color"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_twitter" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Floating Action Button"
        android:textSize="18sp" />
</RelativeLayout>
